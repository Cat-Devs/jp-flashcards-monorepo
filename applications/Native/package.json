{
  "name": "jp-flashcards-native",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "private": true,
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ]
  },
  "scripts": {
    "start": "expo start",
    "start:clean-cache": "npx expo start -c",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "rebuild": "npx expo prebuild --clean && npx expo run:ios",
    "pod:install": "npx pod-install",
    "web": "expo start --web",
    "lint": "eslint .",
    "generate:assets": "node ./scripts/generate-assets.js",
    "expo:fix": "npx expo install --fix",
    "expo:upgrade": "npx expo install --fix",
    "expo:doctor": "expo-doctor",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "1.21.0",
    "axios": "^1.6.7",
    "dotenv": "^16.4.4",
    "expo": "^50.0.7",
    "expo-constants": "^15.4.5",
    "expo-dev-client": "^3.3.8",
    "expo-font": "^11.10.3",
    "expo-linking": "^6.2.2",
    "expo-router": "^3.4.7",
    "expo-speech": "^11.7.0",
    "expo-splash-screen": "^0.26.4",
    "expo-status-bar": "^1.11.1",
    "expo-system-ui": "^2.9.3",
    "jest": "^29.2.1",
    "jest-expo": "~50.0.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.73.4",
    "react-native-dotenv": "^3.4.10",
    "react-native-polyfill-globals": "^3.1.0",
    "react-native-safe-area-context": "^4.9.0",
    "react-native-screens": "~3.29.0",
    "react-native-ui-lib": "^7.16.0",
    "react-native-web": "~0.19.6",
    "wanakana": "^5.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/jest": "^29.5.11",
    "@types/react": "~18.2.45",
    "@types/react-native-dotenv": "^0.2.1",
    "@types/sync-storage": "^0.4.2",
    "@types/wanakana": "^4.0.5",
    "eslint": "^8.53.0",
    "eslint-config-universe": "^12.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "sharp-cli": "^2.1.0",
    "typescript": "^5.3.0"
  }
}
